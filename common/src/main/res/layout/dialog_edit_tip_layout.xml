<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="400dp"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@drawable/dialog_bg"
				android:orientation="vertical"
	>

	<ImageView
		android:id="@+id/dialog_closs"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:layout_alignParentRight="true"
		android:paddingBottom="5dp"
		android:paddingLeft="15dp"
		android:paddingRight="25dp"
		android:paddingTop="15dp"
		android:src="@drawable/hccz_ic_tc_gb"
		/>

	<LinearLayout
		android:id="@+id/ll"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/dialog_closs"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/dialog_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/hccz_ic_tk_gth"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="12dp">

			<TextView
				android:id="@+id/dialog_msg"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:text="您还有未绑定患者的耗材，确认领用吗？"
				android:textColor="#000000"
				android:textSize="19sp"/>

			<TextView
				android:id="@+id/dialog_red"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/dialog_msg"
				android:layout_marginTop="7dp"
				android:text="耗材未绑定患者"
				android:textColor="#ff0000"
				android:textSize="17sp"/>

		</LinearLayout>


	</LinearLayout>
	<EditText
		android:id="@+id/et_content"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@id/ll"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="@null"
		android:padding="10dp"
		android:layout_marginTop="@dimen/margin_20dp"
		android:hint="请输入内容"
		android:textColor="@color/text_gray_3"
		android:textColorHint="@color/text_72"
		android:textSize="@dimen/font_size_18"
		android:inputType="textMultiLine"
		android:gravity="top"
		android:singleLine="false"
		android:scrollbars="vertical"
		android:scrollHorizontally="false"
		android:windowSoftInputMode="stateHidden"
		/>
	<TextView
		android:id="@+id/dialog_right"
		android:layout_below="@id/et_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginBottom="20dp"
		android:layout_marginLeft="15dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="20dp"
		android:background="@drawable/bg_btn_line_pre"
		android:clickable="true"
		android:gravity="center"
		android:paddingBottom="5dp"
		android:paddingLeft="25dp"
		android:paddingRight="25dp"
		android:paddingTop="5dp"
		android:text="确定"
		android:textColor="#ffffff"
		android:textSize="17sp"
		/>

	<TextView
		android:id="@+id/dialog_left"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/et_content"
		android:layout_marginBottom="20dp"
		android:layout_marginTop="20dp"
		android:layout_toLeftOf="@+id/dialog_right"
		android:background="@drawable/bg_btn_line_nor"
		android:gravity="center"
		android:paddingBottom="5dp"
		android:paddingLeft="25dp"
		android:paddingRight="25dp"
		android:paddingTop="5dp"
		android:text="取消"
		android:textColor="#585858"
		android:textSize="17sp"/>

</RelativeLayout>