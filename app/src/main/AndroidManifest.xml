<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rivamed.orthopaedicacceptanceterminal">

    <application
        android:name=".app.OrthopaedicApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/my_app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="design_width_in_dp"
            android:value="960" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="600" />

        <activity
            android:name=".activities.WelcomeActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivityNew"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan|stateHidden" />

        <activity
            android:name=".activities.SelectOperationSuiteActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".activities.OptSuiteDetailsActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.SuiteDetailsActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.CstCostDetailsActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:screenOrientation="landscape"
             />
        <activity
            android:name=".activities.SettingIpActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.CstCostSureActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.SelectOperationPlanActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activities.UrgentSelectPatintActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.UrgentSelectOptActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape" />

        <activity
            android:name=".activities.OrderDetailsActivity"
            android:configChanges="keyboard|orientation"
            android:exported="false"
            android:screenOrientation="landscape" />

    </application>

</manifest>