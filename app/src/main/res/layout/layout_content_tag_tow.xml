<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/pg_bg"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/rg_content_tag"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_content_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_content_tag"
            android:button="@null"
            tools:text="手术排班"
            android:checked="true"
            android:gravity="center"
            android:textColor="@drawable/selector_text_content_tag"
            android:textSize="@dimen/font_size_20" />

        <RadioButton
            android:id="@+id/rb_content_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_50dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_content_tag"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            tools:text="加急订单"
            android:textColor="@drawable/selector_text_content_tag"
            android:textSize="@dimen/font_size_20" />
    </RadioGroup>
</LinearLayout>
