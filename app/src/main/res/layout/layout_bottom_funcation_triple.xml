<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/ll_bottom_root"
    android:gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_13dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_bottom_left"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="195dp"
            android:layout_height="38dp"
            android:background="@drawable/shape_bg_bottom_btn_left"
            android:gravity="center"
            android:text="拒绝"
            android:textColor="@color/text_gray_3"
            android:textSize="@dimen/font_size_18" />

        <Button
            android:id="@+id/bt_bottom_medium"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="195dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:background="@drawable/shape_bg_bottom_btn_center"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"
            tools:text="打印标签" />

        <Button
            android:id="@+id/bt_bottom_right"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="195dp"
            android:layout_height="38dp"
            android:layout_marginLeft="@dimen/margin_30dp"
            android:background="@drawable/shape_bg_bottom_btn_right"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"
            tools:text="确认" />
    </LinearLayout>
</LinearLayout>
