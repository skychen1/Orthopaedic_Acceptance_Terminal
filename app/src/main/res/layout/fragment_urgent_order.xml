<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手术名称："
                android:textColor="#000000"
                android:textSize="@dimen/font_size_19"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_op_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="1233222"
                android:textColor="#ff585858"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@mipmap/icon_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="患者姓名："
                android:textColor="#000000"
                android:textSize="@dimen/font_size_19" />

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="1233222"
                android:textColor="#ff585858"
                android:textSize="18sp" />
            <ImageView
                android:id="@+id/img_patient_edit"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/margin_20dp"
                android:background="@mipmap/icon_edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="患者ID："
                android:textColor="#000000"
                android:textSize="@dimen/font_size_19" />

            <TextView
                android:id="@+id/tv_patient_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="1233222"
                android:textColor="#ff585858"
                android:textSize="18sp" />
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="@dimen/margin_2dp"
        android:layout_height="match_parent"
        android:background="#E6ECF2" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_suit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingTop="@dimen/margin_16dp"
        tools:listitem="@layout/item_operation_suit" />
</LinearLayout>