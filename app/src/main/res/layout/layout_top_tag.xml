<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/bg_1C6573"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_10dp"
    android:paddingBottom="@dimen/margin_10dp">

    <RadioGroup
        android:id="@+id/rg_top_tag"
        android:layout_width="300dp"
        android:layout_height="@dimen/margin_36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_24dp"
        android:layout_marginRight="@dimen/margin_24dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_top_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_36dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_top_tag"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:textColor="@drawable/selector_text_top_tag"
            android:textSize="@dimen/font_size_20"
            tools:text="手术排班" />

        <RadioButton
            android:id="@+id/rb_top_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/margin_36dp"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_top_tag"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:textColor="@drawable/selector_text_top_tag"
            android:textSize="@dimen/font_size_20"
            tools:text="加急订单" />
    </RadioGroup>
</LinearLayout>
